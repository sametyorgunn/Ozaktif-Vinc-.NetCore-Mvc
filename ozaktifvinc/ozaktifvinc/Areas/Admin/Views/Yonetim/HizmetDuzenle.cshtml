@model ozaktifvinc.Models.Hizmetler
@{
    ViewData["Title"] = "HizmetDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>HizmetDuzenle</h3>

<form method="post" enctype="multipart/form-data">

    <div hidden class="form-group col-sm-3">
        <label for="exampleInputPassword1">id</label>
        <input type="text" class="form-control col-sm-3" value="@Model.Id" name="Id" id="exampleInputPassword1" placeholder="Başlık">
    </div>
    <div class="form-group col-sm-3">
        <label for="exampleInputPassword1">Başlık</label>
        <input type="text" class="form-control col-sm-3" value="@Model.Baslik" name="Baslik" id="exampleInputPassword1" placeholder="Başlık">
    </div>
    <div class="form-group col-sm-3">
        <label for="exampleInputPassword1">İçerik</label>
        <input type="text" class="form-control col-sm-3" value="@Model.Icerik" name="Icerik" id="exampleInputPassword1" placeholder="İçerik">
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>



